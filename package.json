{
  "name": "@jigen/jigen-contracts",
  "version": "0.0.1",
  "description": "Jigen Contracts",
  "license": "MIT",
  "scripts": {
    "clean": "hardhat clean",
    "compile": "hardhat --show-stack-traces --max-memory 8192 compile",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\"",
    "deploy": "hardhat deploy --write true --network",
    "deploy:mainnet": "hardhat deploy --write true --network mainnet --tags",
    "deploy:rinkeby": "hardhat deploy --write true --network rinkeby --tags",
    "deploy:bsc": "hardhat deploy --write true --network bsc --tags",
    "deploy:bscTestnet": "hardhat deploy --write true --network bscTestnet --tags",
    "deploy:hardhat": "hardhat deploy --write true --network hardhat --tags",
    "verify": "hardhat etherscan-verify --license MIT --solc-input --network",
    "etherscan-verify": "hardhat etherscan:verify --network",
    "lint": "yarn run lint:sol && yarn run lint:ts && yarn run prettier:list-different",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "prettier": "prettier --config .prettierrc --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:list-different": "prettier --config .prettierrc --list-different \"**/*.{js,json,md,sol,ts}\"",
    "test": "hardhat test",
    "typechain": "hardhat typechain"
  },
  "dependencies": {
    "@ethersproject/abstract-signer": "^5.5.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.4.0",
    "@typechain/ethers-v5": "^8.0.5",
    "@typechain/hardhat": "^3.0.0",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "chai": "^4.3.4",
    "chai-ethers": "^0.0.1",
    "chalk": "^4.1.1",
    "dotenv": "^10.0.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eth-sig-util": "^3.0.1",
    "ethereum-waffle": "^3.4.0",
    "ethereumjs-util": "^7.1.3",
    "ethers": "^5.5.1",
    "fs-extra": "^10.0.0",
    "hardhat": "^2.7.0",
    "hardhat-abi-exporter": "^2.3.1",
    "hardhat-contract-sizer": "^2.1.1",
    "hardhat-deploy": "^0.9.14",
    "hardhat-deploy-ethers": "0.3.0-beta.11",
    "hardhat-gas-reporter": "^1.0.6",
    "hardhat-watcher": "^2.1.1",
    "mocha": "^9.1.3",
    "prettier": "^2.5.0",
    "prettier-plugin-solidity": "1.0.0-beta.19",
    "shelljs": "^0.8.4",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.17",
    "ts-node": "^10.4.0",
    "typechain": "^6.0.5",
    "typescript": "^4.5.2"
  },
  "files": [
    "build/**",
    "artifacts/**",
    "contracts/**",
    "deployments/**",
    "deploy/**"
  ]
}
